  {{>header}}
   <!-- start page content wrapper-->
    <div class="page-content-wrapper">
      <!-- start page content-->
      <div class="page-content">
        <!--start product detail-->
        <section class="shop-page">
          <div class="shop-container">

            <div class="card shadow-sm border-0">
              <div class="card-body">
                
                <div class="product-detail-card">
                  <div class="product-detail-body">
                    {{#if message }}
							<h4 class="alert alert-success mt-4">{{message}}</h4>
							{{/if}}
                    <div class="row g-0">
                        <div class="col-12 col-lg-5">
                            <div class="item">
                                <img src="{{company.companyImage}}" class="img-fluid" alt="">
                              </div>
                        </div>
                        <div class="col-12 col-lg-7">
                        <div class="product-info-section p-3">
                          <h3 class="mt-3 mt-lg-0 mb-0">
                            {{company.companyName}}
                          </h3>
                          <div class="d-flex align-items-center mt-3 gap-2">
                            <h5 class="mb-0 ">{{company.slug}}</h5>
                          </div>
                          <div class="mt-3">
                            <h6>Description :</h6>
                            <p class="mb-0">{{company.companyDescrption}}</p>
                          </div>
                          <div class="mt-3">
                            <h6>Employees Count :</h6>
                            <p class="mb-0">{{company.workers}}</p>
                          </div>
                          <!--end row-->
                          <div class="d-flex gap-2 mt-3">
                            <a href="javascript:;" class="btn btn-dark btn-ecomm" data-bs-toggle="modal" data-bs-target="#exampleDarkModal">Apply</a> 
                          </div>
                          <hr />
                          <div class="product-sharing">
                            <h6>Socials</h6>
                            <ul class="list-inline">
                              <li class="list-inline-item "> <a href="javascript:;" class="bg-facebook"><i
                                    class='bx bxl-facebook'></i></a>
                              </li>
                              <li class="list-inline-item"> <a href="javascript:;" class="bg-linkedin"><i
                                    class='bx bxl-linkedin'></i></a>
                              </li>
                              <li class="list-inline-item"> <a href="javascript:;" class="bg-twitter"><i
                                    class='bx bxl-twitter'></i></a>
                              </li>
                              <li class="list-inline-item"> <a href="javascript:;" class="bg-gradient-purple"><i
                                    class='bx bxl-instagram'></i></a>
                              </li>
                              <li class="list-inline-item"> <a href="javascript:;" class="bg-google"><i
                                    class='bx bxl-google'></i></a>
                              </li>
                            </ul>
                          </div>
                        </div>
                        </div>
                    </div>
                    <!--end row-->
                  </div>
                </div>

              </div>
            </div>

             <div class="col">
                      <!-- Button trigger modal -->
                      <!-- Modal -->
                      <div class="modal fade" id="exampleDarkModal" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-lg modal-dialog-centered">
                          <div class="modal-content bg-dark">
                            <form action="/companies/{{company.slug}}" method="post">
                            <div class="modal-header">
                              <h5 class="modal-title text-white">Apply to {{company.companyName}}</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body text-white">
                      <div class="row g-3">
                        <div class="col-6">
                           <label class="form-label">Company's Name</label>
                           <input type="text" name="companyname" class="form-control" value="{{company.companyName}}">
                        </div>
                        <div class="col-6">
                         <label class="form-label">Company's Slug</label>
                         <input type="text" name="slug" class="form-control" value="{{company.slug}}">
                       </div>
                       <div class="col-6">
                         <label class="form-label">Student Name</label>
                         <input type="text" name="studentname" class="form-control" value="{{user.name}}">
                       </div>
                     </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                              <button type="submit" class="btn btn-dark">Apply</button>
                            </div>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>

          </div>
        </section>
        <!--end product detail-->
      </div>
      <!-- end page content-->
      {{>footer}}